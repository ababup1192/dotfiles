## Git functions

# checkout git branch
git-checkout() {
  local branches branch
  branches=$(git branch -vv) &&
    branch=$(echo "$branches" | fzf +m) &&
  git checkout $(echo "$branch" | awk '{print $1}' | sed "s/.* //")
}

git-push() {
  local branches branch
  branches=$(git branch -vv) &&
    branch=$(echo "$branches" | fzf +m) &&
  git push $(echo "$branch" | awk '{print $1}' | sed "s/.* //")
}

git-push-current() {
    git push $(git symbolic-ref --short HEAD)
}

